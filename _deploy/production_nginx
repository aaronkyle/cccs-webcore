server {
    listen       80;
    server_name  production.crossculturalconsult.com www.production.crossculturalconsult.com;
    rewrite ^ https://$server_name$request_uri? permanent;
}
server {
    listen       443;
    server_name  production.crossculturalconsult.com www.production.crossculturalconsult.com;

    ssl on;
    ssl_certificate /etc/nginx/ssl/chained.crt;
    ssl_certificate_key /etc/nginx/ssl/server.key;

    access_log   /var/log/nginx/production.crossculturalconsult.com.access.log;
    error_log    /var/log/nginx/production.crossculturalconsult.com.error.log;
    root /home/webcore/production/;

    location  /static/ {
        alias  /home/webcore/production/static_collected/;
    }

    location  /media/ {
        alias  /home/webcore/production/media/;
    }

    location  = /favicon.ico {
        alias  /home/webcore/production/media/favicon.ico;
    }

    location  = /robots.txt {
        alias  /home/webcore/production/media/robots.txt;
    }

    location  / {
        proxy_pass            http://127.0.0.1:8000;
        proxy_redirect        off;
        proxy_set_header      Host             $host;
        proxy_set_header      X-Real-IP        $remote_addr;
        proxy_set_header      X-Forwarded-For  $proxy_add_x_forwarded_for;
        client_max_body_size  10m;
    }
    allow all;
}